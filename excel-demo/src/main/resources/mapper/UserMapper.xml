<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ynthm.excel.demo.user.mapper.UserMapper">
    <insert id="batchInsert">
        INSERT INTO t_user
        (name, age)
        VALUES
        <foreach collection="list" item="user" separator=",">
            ( #{user.name}, #{user.age})
        </foreach>
    </insert>

    <select id="selectUsersByIds" parameterType="java.util.List"
            resultType="com.ynthm.excel.demo.user.entity.User">
        select * from t_user where id in
        <foreach item="item" collection="idList" separator="," open="(" close=")" index="">#{item, jdbcType=INTEGER}
        </foreach>
    </select>
    <select id="queryByUser" resultType="com.ynthm.excel.demo.user.entity.User">
        select *
        from t_user
        where (name, age) = (#{name}, #{age})
    </select>
</mapper>
